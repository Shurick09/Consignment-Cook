
<p id="notice"><%= notice %></p>

<div class="title-container">
  <h1>Listed Shoes</h1>
  <%= link_to 'New Shoe', new_shoe_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Sku</th>
      <th>Size</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Sold</th>
      <th>Stock ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
    <% if shoe.user_id == current_user.id && shoe.sold == false%>

      <tr>
        <td><%= shoe.sku %></td>
        <td><%= shoe.size %></td>
        <td><%= 1 %></td>
        <td><%= shoe.price %></td>
        <td>Listed</td>
        <td><%=shoe.stockId%></td>
        <td><%= link_to 'Show', shoe %></td>
        <td><%# link_to 'Edit', edit_shoe_path(shoe) %></td>
        <td><%# link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
    <% end %>
  </tbody>
</table>




<br>
<%= link_to "Listed Shoes", controller: "shoes", action: "listed"%>
<br>
<%= link_to "Sold Shoes", controller: "shoes", action: "sold"%>
