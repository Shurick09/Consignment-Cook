        <%= form.label :size %>
        <%= form.text_field :size, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="field">
      <div class="col-md-4">
        <div class="form-group">
        <%= form.label :quantity %>
        <%= form.number_field :quantity, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="field">
      <div class="col-md-4">
