<p id="notice"><%= notice %></p>

<h1>Shoes</h1>

<table>
  <thead>
    <tr>
      <th>Sku</th>
      <th>Size</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
    <% if (user_signed_in? == true) && (shoe.user_id == current_user.id)%>

      <tr>
        <td><%= shoe.sku %></td>
        <td><%= shoe.size %></td>
        <td><%= 1 %></td>
        <td><%= shoe.price %></td>
        <td><%= link_to 'Show', shoe %></td>
        <td><%# link_to 'Edit', edit_shoe_path(shoe) %></td>
        <td><%# link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  
    <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shoe', new_shoe_path %>
